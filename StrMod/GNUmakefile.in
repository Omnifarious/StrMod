# @configure_input@

prefix		=	@prefix@
exec_prefix	=	@exec_prefix@
srcdir		=	@srcdir@
top_srcdir	=	@top_srcdir@
libdir		=	$(prefix)/lib

CC = @CC@
CFLAGS = @CFLAGS@

CXX = @CXX@
CXXFLAGS = @CXXFLAGS@

CPPFLAGS = @CPPFLAGS@
DEFS =  @DEFS@

LDFLAGS = @LDFLAGS@
LIBS =  @LIBS@

DEPDB = @DEPDB@

%.o : %.cxx
	$(CXX) -c $(@:.o=.cxx) $(CPPFLAGS) $(CXXFLAGS) -o $@

%.s.o : %.cxx
	$(CXX) -c $(@:.s.o=.cxx) $(CPPFLAGS) $(CXXFLAGS) -fPIC -o $@

%.cxx.d : %.cxx
	+$(CXX) -c $< $(CPPFLAGS) $(CXXFLAGS) -M | sed "s;$<;;" | sed 's;^$(notdir $*)\.o;$*.cxx;' | $(DEPDB) update --addtouch $< $<

%.c.d : %.c
	+$(CC) -c $< $(CPPFLAGS) $(CFLAGS) -M | sed "s;$<;;" | sed 's;^$(notdir $*)\.o;$*.c;' | $(DEPDB) update --addtouch $< $<

MYMAKE := $(MAKE)

#  StreambufModule.cxx  HL7Module.cxx
LIBCCS = EchoModule.cxx  StrFDPlug.cxx  STR_ClassIdent.cxx \
         StreamFDModule.cxx  SockListenModule.cxx  StreamModule.cxx \
         SocketModule.cxx  StreamSplitter.cxx  StrChunk.cxx  StrChunkPtr.cxx \
         LinearExtent.cxx  GroupVector.cxx  GV_Iterator.cxx  StrSubChunk.cxx \
         DBStrChunk.cxx  GroupChunk.cxx  LinearExtentStrmOp.cxx \
         StrChunkPtrT.cxx  SimplePlug.cxx  SimpleMulti.cxx  CharChopper.cxx \
         PassThrough.cxx  NewlineChopper.cxx  StreamProcessor.cxx \
         ProcessorModule.cxx

CCNAMES = $(LIBCCS) \
          tests/testchunk.cxx  tests/server.cxx  tests/testdist.cxx \
          tests/testecho.cxx   tests/teststr.cxx tests/echoserv.cxx \
          tests/testextent.cxx tests/testGV.cxx  tests/testmulti.cxx

CNAMES = utils/cechoserv.c  utils/audiodiv.c  utils/writelots.c

DEPSUB = $(patsubst %.c,%.o,$(?:.cxx=.o))
DEPSUBDD = $(patsubst %.c,%.c.d,$(?:.cxx=.cxx.d))

$(libdir)/libStrMod.a : $(LIBCCS)
	$(MAKE) $(DEPSUB)
	ar rv $@ $(DEPSUB)
	rm -f $(DEPSUB)

$(EXTLIBTAG) : $(LIBCCS)
	$(MAKE) $(DEPSUB)
	touch $(EXTLIBTAG)
	ar rv $(EXTLIB) $(DEPSUB)
	rm -f $(DEPSUB)

tests/server : tests/server.o
	$(CXX) tests/server.o $(LDFLAGS) $(LIBS) -o tests/server

tests/echoserv : tests/echoserv.o
	$(CXX) tests/echoserv.o $(LDFLAGS) $(LIBS) -o tests/echoserv 2>&1 | c++filt

tests/multitest : tests/testmulti.o
	$(CXX) tests/testmulti.o $(LDFLAGS) $(LIBS) -o tests/multitest 2>&1 | c++filt

tests/testdist : tests/testdist.o
	$(CXX) tests/testdist.o $(LDFLAGS) $(LIBS) -o tests/testdist

tests/teststr : tests/teststr.o
	$(CXX) tests/teststr.o $(LDFLAGS) $(LIBS) -o tests/teststr

tests/testchunk : tests/testchunk.o DBStrChunk.o StrChunk.o GroupVector.o \
                  LinearExtent.o  STR_ClassIdent.o
	$(CXX) tests/testchunk.o $(LDFLAGS) $(LIBS) -o tests/testchunk

tests/testecho : tests/testecho.o
	$(CXX) tests/testecho.o $(LDFLAGS) $(LIBS) -o tests/testecho 2>&1 | c++filt

tests/testextent : tests/testextent.o LinearExtent.o
	$(CXX) $^ -o $@ 2>&1 | c++filt

tests/testGV : tests/testGV.o GroupVector.o GV_Iterator.o StrChunk.o \
               GroupChunk.o DBStrChunk.o StrChunkPtr.o LinearExtent.o \
               StrSubChunk.o LinearExtentStrmOp.o
	$(CXX) $^ -o $@ -L/home/hopper/lib $(LIBS) 2>&1 | c++filt

GNUmakefile : depend.stamp
	$(DEPDB) list --makefiles GNUmakefile GNUmakefile.new
	mv GNUmakefile GNUmakefile~
	mv GNUmakefile.new GNUmakefile

depend.stamp : $(CCNAMES)
	rm -f GNUmakefile.old
	ln GNUmakefile GNUmakefile.old
	$(MYMAKE) -f GNUmakefile.old $(DEPSUBDD)
	rm -f GNUmakefile.old
	touch depend.stamp

